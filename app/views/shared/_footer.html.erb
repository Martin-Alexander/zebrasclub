<!-- ********** Footer for the landing page *********** -->

<footer class="footer text-center footer-landing">
  <div class="container-easy">
    <p><%= t('.abonnez_vous') %></p>

    <div class="email-footer row">
      <div class="col-sm-offset-3 col-sm-6">
        <%= form_for(@home_page_user, url: new_user_path(@home_page_user), :method => :post, html: {class: "input-group input-group-lg", role: "form"}, remote: true ) do |f| %>

        <%= f.email_field :email, required: true, autofocus: true, label: false, placeholder: "exemple@gmail.com", class: "form-control" %>

        <div class="input-group-btn">
          <%= f.submit "Dis-moi", class:"btn-landing btn " %>
        </div>
        <%# if @home_page_user.nil? %>
        <%# else %>
        <%#= button_tag type: :submit, class: "btn btn-success" do %>
        <!-- <i class="fa fa-check" aria-hidden="true"></i> -->
        <%# end %>
        <%# end %>
        <%#= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class:"btn base-button" %>
        <% end %> <!-- end of form_for -->
      </div>
    </div>

    <div class="social-media-footer-box">
      <ul class="list-inline">
        <li>
          <%= link_to "https://www.facebook.com" do %>
          <i class="fa fa-facebook"></i>
          <% end %>
        </li>
        <li>
        <%= link_to "https://www.youtube.com" do %>
          <i class="fa fa-youtube"></i>
          <% end %>
        </li>
        <li>
          <%= link_to "https://www.twitter.com" do %>
          <i class="fa fa-twitter"></i>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="padding-copyright container-easy">
      <span>&copy; Copyright 2017 - Zebrasclub.com, Inc.</span>
    </div>

  </div> <!-- container-easy -->
</footer> <!-- end of footer -->

<!-- ************* End of footer landing page ************ -->


